@model SysGames.Models.Venda

@{
	ViewBag.Title = "Create";
}

<h2>Criar</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Venda</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<label class="control-label col-md-2">ID do Cliente</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Pagamento.Carrinho.Cliente.ClienteID, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Pagamento.Carrinho.Cliente.ClienteID, "", new { @class = "text-danger" })
				<p class="text-danger">@ViewBag.Cliente</p>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">ID do Produto</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Pagamento.Carrinho.Produto.ProdutoID, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Pagamento.Carrinho.Produto.ProdutoID, "", new { @class = "text-danger" })
				<p class="text-danger">@ViewBag.Produto</p>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">Previsão de entrega</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Previsao, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Previsao, "", new { @class = "text-danger" })
				<p class="text-danger">@ViewBag.Previsao</p>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Criar" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Voltar para lista de vendas", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
