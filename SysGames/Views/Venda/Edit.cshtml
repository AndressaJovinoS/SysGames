@model SysGames.Models.Venda

@{
	ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Venda</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.VendaID)
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.DataHora)

		<div class="form-group">
			<label class="control-label col-md-2">ID do Cliente</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.Pagamento.Carrinho.Cliente.ClienteID, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Pagamento.Carrinho.Cliente.ClienteID, "", new { @class = "text-danger" })
				<p class="text-danger">@ViewBag.Cliente</p>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Pagamento.Carrinho.Produto.ProdutoID, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Pagamento.Carrinho.Produto.ProdutoID, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Pagamento.Carrinho.Produto.ProdutoID, "", new { @class = "text-danger" })
				<p class="text-danger">@ViewBag.Produto</p>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Pagamento.Carrinho.Produto.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Pagamento.Carrinho.Produto.Valor, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Pagamento.Carrinho.Produto.Valor, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Previsao, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Previsao, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Previsao, "", new { @class = "text-danger" })
				<p class="text-danger">@ViewBag.Previsao</p>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Salvar" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Voltar para lista de vendas", "Index")
</div>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
